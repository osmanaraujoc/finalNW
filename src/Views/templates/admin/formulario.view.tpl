<section class="container w-50">		<h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">{{modeDsc}}</h2>		<form class="d-flex flex-column" action="index.php?page=Admin_Form&mode={{mode}}&id={{Id}}" method="post"		      enctype="multipart/form-data" >				<div class="mb-3">						<label for="nombreLibro" class="form-label">ID</label>						<input type="text" class="form-control" id="idLibro" name="libroId" readonly value="{{libroId}}" >				</div>												<div class="mb-3">						<label for="nombreLibro" class="form-label">Nombre del Libro</label>						<input type="text" class="form-control" id="nombreLibro" name="libroNombre" 						       required value="{{libroNombre}}" {{isReadOnly}}>				</div>				<div class="mb-3">						<label for="autorLibro" class="form-label">Autor del Libro</label>						<input type="text" class="form-control" id="autorLibro" name="libroAutor" required value="{{libroAutor}}" {{isReadOnly}}>				</div>				<div class="row">						<div class="col-md-6 mb-3">								<label for="precioLibro" class="form-label">Precio del Libro</label>								<input type="number" step="0.01" class="form-control" id="precioLibro" name="libroPrecio" required value="{{libroPrecio}}" {{isReadOnly}}>						</div>						<div class="col-md-6 mb-3">								<label for="stock" class="form-label">Stock</label>								<input type="number" class="form-control" id="stock" name="libroStock" required value="{{libroStock}}" {{isReadOnly}}>						</div>				</div>				<div class="row">						<div class="col-md-6 mb-3">								<label for="categoria" class="form-label">Seleccionar Categoria</label>								<select class="form-select" id="categoria" name="libroCategoria" required {{isReadOnly}}>										<!-- Aquí puedes agregar las opciones de categoría -->										{{isReadOnly}}>										<option selected>--Seleciona la categoria--</option>										{{foreach categoriaOpciones}}										<option value="{{value}}" {{selected}}>{{text}}</option>										{{endfor categoriaOpciones}}								</select>						</div>						<div class="col-md-6 mb-3">								<label for="estatus" class="form-label">Seleccionar Estado</label>								<select class="form-select" id="estatus" name="libroEstatus" required {{isReadOnly}}>										{{isReadOnly}}>										<option selected>--Seleciona el estado--</option>																				{{foreach estadosOptions}}										<option value="{{key}}"{{selected}}>{{value}}</option>										{{endfor estadosOptions}}								</select>						</div>						<div class="mb-3">								<label for="descripcionLibro" class="form-label">Descripción del Libro</label>								<textarea class="form-control" id="descripcionLibro" rows="3" name="libroDescripcion" required {{isReadOnly}}								>{{libroDescripcion}}</textarea>						</div>				</div>								<div class=" mb-3">								<label for="imagenLibro" class="form-label">Imagen del Libro</label>								<input class="form-control" type="file" id="imagenLibro" name="libroImagen" {{isReadOnly}}>						<img src="/{{BASE_DIR}}/servidorImagenes/{{libroImagen}}" alt="" width="50" height="50">				</div>				<div class=" d-flex flex-row justify-content-end mt-5">												{{if showActions}}								<button type="submit" class="btn btn-primary mx-3 w-25">Enviar</button>						{{endif showActions}}																				<input type="button" value="Cancelar"  class="btn btn-secondary w-25" 								       onclick="location.href='index.php?page=Admin_ListaLibros'" value="Cancelar">						</div>				</div>		</form></section>